@model ProgrammingClass6.Mvc.Models.Product

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="UnitPrice" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input asp-for="Quantity" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Manufacturer</label>
        <select asp-for="ManufacturerId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Manufacturers, "Id", "Name"))">
            <option value="">-- Select Manufacturer --</option>
        </select>
    </div>
    <div class="form-group">
        <label>Categories</label><br />
        @foreach(var c in ViewBag.Categories as List<ProgrammingClass6.Mvc.Models.Category>)
        {
            <input type="checkbox" name="selectedCategories" value="@c.Id"
                   @(Model.ProductCategories.Any(pc => pc.CategoryId == c.Id) ? "checked" : "") /> @c.Name <br />
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
