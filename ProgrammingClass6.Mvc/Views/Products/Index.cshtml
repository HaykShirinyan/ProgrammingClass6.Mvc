@model List<Product>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Unit Price
                </th>
                <th>
                    Quantity
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>
                        @product.Id
                    </td>
                    <td>
                        @product.Name
                    </td>
                    <td>
                        @product.Description
                    </td>
                    <td>
                        @product.UnitPrice
                    </td>
                    <td>
                        @product.Quantity
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>