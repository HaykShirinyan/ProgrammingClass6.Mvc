@model List<Product>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a class="btn btn-primary mb-3" asp-controller="Products" asp-action="Create">
    Add New
</a>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Unit Price
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Manufacturer
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>
                        @product.Id
                    </td>
                    <td>
                        @product.Name
                    </td>
                    <td>
                        @product.Description
                    </td>
                    <td>
                        @product.UnitPrice
                    </td>
                    <td>
                        @product.Quantity
                    </td>
                    <td>
                        @product.Manufacturer?.Name
                    </td>
                    <td>
                        <a class="btn btn-secondary" 
                            asp-controller="Products" 
                            asp-action="Edit" 
                            asp-route-id="@product.Id">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>