@model IEnumerable<ProgrammingClass6.Mvc.Models.Product>

<h1>Product List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Manufacturer</th>
            <th>Categories</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.UnitPrice</td>
                <td>@product.Quantity</td>
                <td>@product.Manufacturer?.Name</td>
                <td>
                    @foreach(var pc in product.ProductCategories)
                    {
                        @pc.Category.Name <br />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
