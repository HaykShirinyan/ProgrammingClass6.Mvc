@model Product

<div>
	<form asp-controler="Products" asp-action="Create">
		<div class="mb-3">
			<label asp-for="ProductName" class="form-lable">Product Name</label>
			<input asp-for="ProductName" class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="Brand" class="form-lable">Brand</label>
			<input asp-for="Brand" class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="Quantity" class="form-lable">Quantity</label>
			<input asp-for="Quantity" class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="Price" class="form-lable">Price</label>
			<input asp-for="Price" class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="InStock" class="form-lable">InStock</label>
			<input asp-for="InStock" class="form-control" />
		</div>

		<div>
			<a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Cancel</a>

			<button type="submit" class="btn btn-primary">
				Save
			</button>
		</div>
	</form>
</div>