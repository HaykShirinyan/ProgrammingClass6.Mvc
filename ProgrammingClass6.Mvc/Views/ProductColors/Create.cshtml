@{
}

<div>
    <form asp-controller="ProductColors" asp-action="Create">
        <div class="mb-3">
            <label asp-for="ProductId" class="form-label">
                Product
            </label>
            <input asp-for="ProductId" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="ColorId" class="form-label">
                Color
            </label>
            <select asp-for="ColorId" class="form-control">
                <option>-- Please Select --</option>

                @foreach (var color in ViewBag.Colors as List<Color>)
                {
                    <option value="@color.Id">
                        @color.Name
                    </option>
                }
            </select>
        </div>

        <div>
            <a class="btn btn-secondary"
               asp-controller="ProductColors"
               asp-action="Index"
               asp-route-productId="@Model.ProductId">
                Cancel
            </a>

            <button type="submit" class="btn btn-primary">
                Save
            </button>
        </div>
    </form>
</div>