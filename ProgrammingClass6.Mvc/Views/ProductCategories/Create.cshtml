@{
}

<div>
    <form asp-controller="ProductCategories" asp-action="Create">
        <div class="mb-3">
            <label asp-for="ProductId" class="form-label">
                Product
            </label>
            <input asp-for="ProductId" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">
                Category
            </label>
            <select asp-for="CategoryId" class="form-control">
                <option>-- Please Select --</option>

                @foreach (Category category in ViewBag.Categories as List<Category>)
                {
                    <option value="@category.Id">
                        @category.Name
                    </option>    
                }
            </select>
        </div>

        <div>
            <a class="btn btn-secondary" 
                asp-controller="ProductCategories" 
                asp-action="Index"
                asp-route-productId="@Model.ProductId">
                Cancel
            </a>

            <button type="submit" class="btn btn-primary">
                Save
            </button>
        </div>
    </form>
</div>