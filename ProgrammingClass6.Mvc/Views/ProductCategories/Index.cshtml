@model List<ProductCategory>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="my-3">
    <a class="btn btn-primary" asp-controller="ProductCategories" asp-action="Create"
        asp-route-productId="@ViewBag.ProductId">
        Add Category
    </a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductCategory product in Model)
            {
                <tr>
                    <td>
                        @product.Category.Name
                    </td>
                    <td>
                        @product.Category.Description
                    </td>
                    <td>
                        <form asp-controller="ProductCategories" asp-action="Delete"
                            asp-route-productId="@product.ProductId" asp-route-categoryId="@product.CategoryId">
                            <button type="submit" class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>