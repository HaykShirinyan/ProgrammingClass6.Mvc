@model List<ProductType>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a class=" btn btn-primary mb-3" asp-controller="ProductTypes" asp-action="Create">
    Add New
</a>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    UnitePrice
                </th>
                <th>
                    IsActive
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (ProductType productType in Model)
            {<tr>
                <td>
                    @productType.Id
                </td>
                <td>
                    @productType.Name
                </td>
                <td>
                        @productType.Description
                </td>
                <td>
                    @productType.UnitePrice
                </td>
                <td>
                        @productType.IsActive
               </td>
               <td>
                   <a class=" btn btn-secondary" 
                   asp-controller="ProductTypes" 
                   asp-action="Edit" 
                   asp-route-id="@productType.Id">
                   Edit
               </a>
               </td>

            </tr>
                
            }
        </tbody>

    </table>
</div>
