@model List<ProductType>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a class="mt-3 btn btn-primary" asp-controller="ProductTypes" asp-action="Create">
    Add new product type
</a>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Image Url
                </th>
                <th>
                    Is Active
                </th>
                <th>
                    Sort Order
                </th>
                <th>
                    Create Date
                </th>
                <th>
                    Update Date
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (ProductType productType in Model)
            {
                <tr>
                    <td>
                        @productType.Id
                    </td>
                    <td>
                        @productType.Name
                    </td>
                    <td>
                        @productType.Description
                    </td>
                    <td>
                        @productType.ImageUrl
                    </td>
                    <td>
                        @productType.IsActive
                    </td>
                    <td>
                        @productType.Code
                    </td>
                     <td>
                        @productType.CreatedDate
                    </td>
                    <td>
                        @productType.UpdatedDate
                    </td>
                     <td>
                        <a class="btn btn-secondary" asp-controller="ProductTypes" asp-action="Edit" asp-route-id="@productType.Id">
                        Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>  