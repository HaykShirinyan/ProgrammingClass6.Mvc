<h1 class="h3">
    Create UnitOfMeasure
</h1>
<form asp-controller="UnitOfMeasures" asp-action="Create">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Type" class="form-label">Type</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UnitOfMeasureValue" class="form-label">Unit Of Measure Value</label>
        <input asp-for="UnitOfMeasureValue" class="form-control" />
        <span asp-validation-for="UnitOfMeasureValue" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UnitOfMeasureValueId" class="form-label">
            UnitOfMeasureValu
        </label>
        <select asp-for="UnitOfMeasureValueId" class="form-control">
            <option>
 
            </option>
            @foreach (var unitOfMeasureValue in ViewBag.UnitOfMeasureValues)
            {
                <option value="@unitOfMeasureValue.Id">
                    @unitOfMeasureValue.Name
                </option>
            }
                      
        </select>
    </div>
    <div>
        <a class="btn btn-secondary" asp-controller="UnitOfMeasures" asp-action="Index">
            Cancel
        </a>
        <button class="btn btn-primary" type="submit">
            Save
        </button>
    </div>
</form>