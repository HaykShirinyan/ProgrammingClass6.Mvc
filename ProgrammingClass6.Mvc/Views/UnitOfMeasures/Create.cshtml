<h1 class="h3">
    Create Unit Of Measure
</h1>
<form asp-controller="UnitOfMeasures" asp-action="Create">
    
    <div class="mb-3">
        <label asp-for="UnitName">
            Unit Name
        </label>
        <input asp-for="UnitName"  class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="UnitShortName">
            Unit Short Name
        </label>
        <textarea asp-for="UnitShortName" class="form-control">

        </textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Diametere">
            Diametere
        </label>
        <textarea asp-for="Diametere" class="form-control">
        </textarea>
        <span asp-validation-for="Diametere" class="text-danger">
        </span>
    </div>
    <div>
        <a class="btn btn-secondary" asp-controller="UnitOfMeasures" asp-action="Index">
            Cancel
        </a>

        <button class=" btn btn-primary" type="submit">
            Save
        </button>
    </div>
</form>